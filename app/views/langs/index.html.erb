<div class="h-screen bg-white px-3 py-3">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Langs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Langs</h1>
    <%= link_to "New lang", new_lang_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  
  <hr class="my-3 border-gray-300 w-full">

  <div id="cards" class="min-w-full flex gap-2">
    <% @langs.each do |lang| %>
    <%= link_to lang, class: "block hover:bg-gray-200 max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow" do %>
      <%= render lang %>
    <% end %>
    <% end %>
  </div>
</div>
