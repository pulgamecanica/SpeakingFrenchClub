<section class="
  flex flex-col md:flex-row items-center
  h-screen">
  <div class="
    relative
    hidden lg:flex justify-center w-full md:w-1/2 xl:w-2/3 h-screen bg-cover bg-center" style="background-image: url('<%= asset_path('psicodelic.gif') %>'); ">
    <span class="w-full h-full bg-gray-100 absolute opacity-50 z-0"></span>
    <img src="<%= asset_path("parrot.png") %>" alt="" class="z-10 w-auto h-full object-cover">
  </div>
  <div class="animated-background bg-gradient-to-r from-blue-100 via-blue-100 to-violet-100 w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12 flex items-center justify-center">
    <div class="w-full h-100">
      <% if user_signed_in? %>
      <div class="flex items-center h-screen w-full justify-center">
        <div class="max-w-xs">
          <div class="bg-gray-100 shadow-xl rounded-lg py-3 px-6">
            <div class="photo-wrapper p-2">
              <h3 class="text-center text-xl text-gray-900 font-medium leading-8">You are logged in</h3>
              <img class="w-32 h-32 rounded-full mx-auto" src="<%= current_user.intra_profile_image_url %>" alt="profile picture">
            </div>
            <div class="p-2">
              <h3 class="text-center text-xl text-gray-900 font-medium leading-8"><%= current_user.intra_name %></h3>
              <div class="text-center text-gray-400 text-xs font-semibold">
                  <p><%= current_user.intra_user %></p>
              </div>
              <hr class="my-3 border-gray-300 w-full">
              <%= link_to "View Profile", root_path, class:"text-center w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-2 py-1 border border-gray-300" %>
              <%= link_to "Events", events_path, class:"text-center w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-2 py-1 border border-gray-300 mt-2" %>
              <%= link_to "Cards", cards_path, class:"text-center w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-2 py-1 border border-gray-300 mt-2" %>
              <%= link_to "Langs", langs_path, class:"text-center w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-2 py-1 border border-gray-300 mt-2" %>
              <hr class="my-3 border-gray-300 w-full">
              <%= link_to "Sign out", destroy_user_session_path, class: "text-center w-full block bg-gray-200 hover:bg-red-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-2 py-1 border border-gray-300", data: { turbo_method: :delete } %>
            </div>
          </div>
        </div>
      </div>
      <% else %>
      <h1 class="text-xl font-bold text-center">Speaking French Club</h1>
      <hr class="my-6 border-gray-300 w-full">
      <%= link_to intra_auth_ft_auth_path, class: "w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4 py-3 border border-gray-300" do %>
        <div class="flex items-center justify-center">
          <svg width=35 height=35 x="0px" y="0px" viewBox="0 -200 960 960" enable-background="new 0 -200 960 960">
            <polygon id="polygon5" points="32,412.6 362.1,412.6 362.1,578 526.8,578 526.8,279.1 197.3,279.1 526.8,-51.1 362.1,-51.1   32,279.1 "/>
            <polygon id="polygon7" points="597.9,114.2 762.7,-51.1 597.9,-51.1 "/>
            <polygon id="polygon9" points="762.7,114.2 597.9,279.1 597.9,443.9 762.7,443.9 762.7,279.1 928,114.2 928,-51.1 762.7,-51.1 "/>
            <polygon id="polygon11" points="928,279.1 762.7,443.9 928,443.9 "/>
          </svg>
            <span class="ml-4">
            Log in
            </span>
        </div>
      <% end %>
      <p class="text-sm text-gray-500 mt-12 text-center">with ♥️ by pulgamecanica | &copy; <%= Time.now.year %></p>
      <% end %>
    </div>
  </div>
</section>
